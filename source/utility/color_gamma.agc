FUNCTION sRGB_To_Linear(sRGB AS FLOAT)
    // Transform sRGB value to appropriate value in Linear-Space.
    Linear AS FLOAT
    IF     (sRGB <  0.0               ) : Linear = 0.0
    ELSEIF (sRGB >  1.0               ) : Linear = 1.0
    ELSEIF (sRGB <= 0.0404482362771082) : Linear =   sRGB / 12.9232102
    ELSEIF (sRGB >  0.0404482362771082) : Linear = ((sRGB+0.055) / 1.055)^2.4
    ENDIF
ENDFUNCTION Linear


///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
FUNCTION Linear_To_sRGB(Linear AS FLOAT)
    // Transform Linear value to appropriate value in sRGB-Space.
    sRGB AS FLOAT
    IF     (Linear <  0.0                ) : sRGB = 0.0
    ELSEIF (Linear >  1.0                ) : sRGB = 1.0
    ELSEIF (Linear <= 0.00313066844250063) : sRGB = Linear * 12.9232102
    ELSEIF (Linear >  0.00313066844250063) : sRGB = Linear^(1/2.4) * 1.055 - 0.055
    ENDIF
ENDFUNCTION sRGB

