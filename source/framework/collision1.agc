FUNCTION PointvsRange( Point       AS FLOAT,
                       Range_Start AS FLOAT, Range_Length AS FLOAT )  // Length must be positive.
    IF Point >= Range_Start AND Point < Range_Start+Range_Length THEN EXITFUNCTION 1
ENDFUNCTION 0


///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
FUNCTION RangevsRange( Range1_Start AS FLOAT, Range1_Length AS FLOAT,
                       Range2_Start AS FLOAT, Range2_Length AS FLOAT )  // Length must be positive.
    IF Range1_Start < Range2_Start+Range2_Length AND Range1_Start+Range1_Length >= Range2_Start THEN EXITFUNCTION 1
ENDFUNCTION 0


