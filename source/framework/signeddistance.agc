FUNCTION SDW_Sphere(Pnt_Pos REF AS Vec3,
                    Sph_Pos REF AS Vec3, Sph_Rds AS FLOAT)

    DeltaX   AS FLOAT : DeltaX   = Sph_Pos.x - Pnt_Pos.x
    DeltaY   AS FLOAT : DeltaY   = Sph_Pos.y - Pnt_Pos.y
    Distance AS FLOAT : Distance = Sph_Pos.z - Pnt_Pos.z // "DeltaZ".

    Distance = sqrt((DeltaX*DeltaX) + (DeltaY*DeltaY) + (Distance*Distance)) - Sph_Rds

ENDFUNCTION Distance


