///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
TYPE Vec4
    x AS FLOAT
    y AS FLOAT
    z AS FLOAT
    w AS FLOAT
ENDTYPE

TYPE iVec4
    x AS INTEGER
    y AS INTEGER
    z AS INTEGER
    w AS INTEGER
ENDTYPE


///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
FUNCTION vec4(FltX AS FLOAT, FltY AS FLOAT, FltZ AS FLOAT, FltW AS FLOAT)
    Result AS Vec4
    Result.x = FltX
    Result.y = FltY
    Result.z = FltZ
    Result.w = FltW
ENDFUNCTION Result

FUNCTION ivec4(IntX AS INTEGER, IntY AS INTEGER, IntZ AS INTEGER, IntW AS INTEGER)
    Result AS iVec4
    Result.x = IntX
    Result.y = IntY
    Result.z = IntZ
    Result.w = IntW
ENDFUNCTION Result


///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
FUNCTION Print4(Label AS STRING, PrintMe REF AS Vec4, PadLeft AS INTEGER, TruncRight AS INTEGER)
    Print(Label + padstr(PrintMe.x, PadLeft, TruncRight) + " " + padstr(PrintMe.y, PadLeft, TruncRight) + " " + padstr(PrintMe.z, PadLeft, TruncRight) + " " + padstr(PrintMe.w, PadLeft, TruncRight))
ENDFUNCTION

